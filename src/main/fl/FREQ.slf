using external STANDARD >>
define merge-freqs :=
	define merger :=
		list0 => list1 =>
			if (list0 = `$f0, $n0; $t0`) then
				if (list1 = `$f1, $n1; $t1`) then
					case
					|| (n0 < n1) (f0, n0; merger {t0} {list1})
					|| (n1 < n0) (f1, n1; merger {list0} {t1})
					|| (f0 + f1, n0); merger {t0} {t1}
				else
					list0
			else
				list1
	>>
	merge {merger}
>>
